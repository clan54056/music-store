@model IEnumerable<music_store.Models.Song>

@{
    ViewData["Title"] = "Sang";
}

<h1>Sang</h1>

<p>
    <a asp-action="Create">Opret Ny</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Album.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FormattedDuration)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SongId">Opdater</a> |
                    <a asp-action="Details" asp-route-id="@item.SongId">Detaljer</a> |
                    <a asp-action="Delete" asp-route-id="@item.SongId">Slet</a>
                </td>
            </tr>
        }
    </tbody>
</table>
